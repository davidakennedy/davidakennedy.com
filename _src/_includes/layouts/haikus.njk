{# Duplicates regular page markup #}
{% extends 'layouts/base.njk' %}
{% block header %}
  {% include "partials/header-interior.njk" %}
{% endblock %}

{% block content %}
  <section class="page">
    <div class="page-header">
      {%- if featuredimg and image -%}
        {% respimg "", "", image, imgalt, "", 0.75, [320,480,640,800,960,1100], 1100, "", "" %}
      {%- endif -%}
      {% set pagetitle = title or renderData.title %}
      <h1 class="title p-name">{{ pagetitle | markdownify }}</h1>
    </div>
    <div class="page-content stack">
      {{ content | safe }}
      <ol reversed>
      {% for haiku in collections.haikus | reverse %}
        <li><a href="{{ haiku.url | url }}">{{ haiku.data.title }}</a></li>
      {% endfor %}
      </ol>
    </div>
  </section>
{% endblock %}

{% block footer %}
  {% include "partials/footer.njk" %}
{% endblock %}
