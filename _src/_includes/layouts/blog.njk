{% extends 'layouts/base.njk' %}
{%- css %}
  {% include "_src/assets/css/archive.css" %}
  {% include "_src/assets/css/meta.css" %}
{% endcss %}
{% block header %}
  {% include "partials/header.njk" %}
{% endblock %}

{% block content %}
  <div class="archive">
    <div class="header">
      {% set pagetitle = title or renderData.title %}
      <h1 class="title p-name">{{ pagetitle }}</h1>
    </div>
    <div class="content stack">
      {{ content | safe }}
      {% include "partials/signup-form.njk" %}
      {% set postlist = pagination.items %}
      {% include "partials/archive-post-list.njk" %}
    </div>
    {% include "partials/pagination.njk" %}
  </div>
{% endblock %}

{% block footer %}
  {% include "partials/footer.njk" %}
{% endblock %}
