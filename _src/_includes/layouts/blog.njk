{% extends 'layouts/base.njk' %}
{% block content %}
  <div class="page-header">
    <h1 class="title p-name">{{ title or renderData.title }}</h1>
  </div>

  {% if description %}<p class="p-summary">{{ description }}</p>{% endif %}

  <div class="page-content">
    {{ content | safe }}
    {% set postlist = pagination.items %}
    {% include "partials/archive-post-list.njk" %}
  </div>
  {% include "partials/pagination.njk" %}
{% endblock %}
