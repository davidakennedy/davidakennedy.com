{% extends 'layouts/base.njk' %}
{%- css %}
  {% include "_src/assets/css/archive.css" %}
  {% include "_src/assets/css/meta.css" %}
{% endcss %}
{% block header %}
  {% include "partials/breadcrumbs.njk" %}
{% endblock %}

{% block content %}
  <div class="archive">
    <div class="content stack">
      <h1 class="title p-name">{{ title }}</h1>
      {{ content | safe }}
      {% include "partials/signup-form.njk" %}
      {% set postlist = pagination.items %}
      {% include "partials/archive-post-list.njk" %}
      {% include "partials/pagination.njk" %}
    </div>
  </div>
{% endblock %}

{% block footer %}
  {% include "partials/site-navigation.njk" %}
  {% include "partials/copyright.njk" %}
  {% include "partials/site-info-navigation.njk" %}
{% endblock %}
