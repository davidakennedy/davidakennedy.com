{% extends 'layouts/base.njk' %}
{% block content %}
  <section class="page">
    <div class="page-header">
      {%- if featuredimg and image -%}
        {% img "wide-width", "", image, imagealt, "" %}
      {%- endif -%}
      <h1 class="title p-name">{{ title or renderData.title }}</h1>
    </div>

    <div class="page-content">
      {{ content | safe }}
    </div>
  </section>
{% endblock %}
