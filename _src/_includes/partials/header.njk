<a href="{{ '/' | url }}" class="site-title">
  <img class="u-photo" srcset="/assets/img/david-kennedy-portrait-2018-square-small.jpg, /assets/img/david-kennedy-portrait-2018-square-small2x.jpg 2x" src="/assets/img/david-kennedy-portrait-2018-square-small.jpg" alt="" width="50" height="50">
  <span class="name">{{ metadata.title }}</span>
</a>
<nav class="site-navigation" aria-label="Site">
  <ul class="nav">
    {%- for entry in collections.all | eleventyNavigation %}
      <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a {% if entry.url == page.url %}aria-current="page"{% endif %} href="{{ entry.url | url }}">{{ entry.title }}</a></li>
    {%- endfor %}
  </ul>
</nav>
